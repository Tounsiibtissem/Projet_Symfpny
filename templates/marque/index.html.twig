{% extends 'base.html.twig' %}

{% block title %}Marque index{% endblock %}
{% block etiquette %}Nos marques{% endblock %}
{% block section %}Liste des marques{% endblock %}
{% block body %}
    <h1>Marque index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom_marque</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for marque in marques %}
            <tr>
                <td>{{ marque.id }}</td>
                <td>{{ marque.nomMarque }}</td>
                <td>
                    <a href="{{ path('app_marque_show', {'id': marque.id}) }}" class="btn btn-primary">show</a>
                    <a href="{{ path('app_marque_edit', {'id': marque.id}) }}" class="btn btn-warning">edit</a>


                </td>
                
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        <a href="{{ path('app_marque_new') }}" class="btn btn-success">Create new</a>
        </tbody>
    </table>

    
{% endblock %}
